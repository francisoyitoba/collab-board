# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/jobpulse?schema=public"

# JWT
JWT_SECRET="your-secret-key"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# Redis
REDIS_URL="redis://localhost:6379"

# AI API for CV analysis (optional)
# If provided, backend will call `${AI_API_URL}/analyze-cv` with `AI_API_KEY`
# Leave blank to use built-in heuristic parsing
AI_API_KEY=""
AI_API_URL=""

# File Uploads
# Uploads are saved under `backend/uploads/cv` and served at `/uploads/cv/...`
# MAX_FILE_SIZE is informational (multer currently limits to ~10MB)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760 # 10MB

# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"